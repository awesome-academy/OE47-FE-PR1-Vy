mixin slideItems(item)
    - const { active, listItems } = item
        if(active == true)
            .carousel-item.active
                .slider-item.row
                    each listItem in listItems                    
                        +slideItemContent(listItem)

        else
            .carousel-item
                .slider-item.row
                    each listItem in listItems
                        +slideItemContent(listItem)

mixin slideItemContent(listItem)
    - const { src, alt, brand_name, name, price, url } = listItem
    .product-item.col-lg-2.col-md-6.col-sm-6.col-12
        .slide-item-img.position-relative
            img.img-fluid(src=src, alt=alt)
        .slide-item-content.text-center.pt-4
            span.font-size-14.text-uppercase.text-grey.m-0.fw-bold= brand_name
            p.text-black.m-0= name
            .d-flex.justify-content-center
                .line-30.my-2.text-center
            +div-price-small(price)
            +purchase(url, "center")
