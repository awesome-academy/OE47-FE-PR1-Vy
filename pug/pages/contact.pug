extends ../layouts/default-layout.pug

block title
    title Liên hệ

block main
    +breadcrumb(["home"], "liên hệ")

    +section("contact-content", "pb-8 pt-4")
        .container
            h1.text-uppercase.fw-bold liên hệ
            .row 
                .col-6
                    iframe.w-100.h-100(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3833.715598447407!2d108.21780861468433!3d16.080241488874147!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142183b8dc2697d%3A0xc105565d68b6ad90!2zMTYgTMO9IFRoxrDhu51uZyBLaeG7h3QsIFRo4bqhY2ggVGhhbmcsIEjhuqNpIENow6J1LCDEkMOgIE7hurVuZyA1NTAwMDAsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1628668259509!5m2!1svi!2s" allowfullscreen="" loading="lazy")
                .col-6
                    p.text-uppercase gửi email cho chúng tôi
                    form.form-contact(action="#")
                        .form-group.row.align-items-center
                            label.col-3.col-form-label.fw-bold(for='staticName') Tên *
                            .col-9
                                input#staticName.form-control-plaintext(type='text')
                        .form-group.row.align-items-center
                            label.col-3.col-form-label.fw-bold(for='staticEmail') Email *
                            .col-9
                                input#staticEmail.form-control-plaintext(type='text')
                        .form-group.row.align-items-start
                            label.col-3.col-form-label.fw-bold(for='messageTextarea') Tin nhắn *
                            .col-9
                                textarea#messageTextarea.form-control-plaintext.px-4(rows="5")
